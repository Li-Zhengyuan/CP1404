BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 1
        TextInput:
            id: input_miles
            text: ''
            font_size: 48
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                font_size: 28
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                font_size: 28
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert miles to km'
        font_size: 32
        size_hint_y: 1
        on_press: app.handle_calculate()
    Label:
        id: output_label
        font_size: 48
        text: app.output_text
        color: (1, 1, 0, 1)
        size_hint_y: 1